<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/others_operation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Others Operation"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/crash_app_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Crash app"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/others_operation_text_view" />

    <Button
        android:id="@+id/crash_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crash"
        app:layout_constraintBottom_toBottomOf="@id/crash_app_text_view"
        app:layout_constraintStart_toEndOf="@id/crash_app_text_view"
        app:layout_constraintTop_toTopOf="@id/crash_app_text_view" />

    <TextView
        android:id="@+id/create_service_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Create service"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crash_app_text_view" />

    <Button
        android:id="@+id/create_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="@id/create_service_text_view"
        app:layout_constraintStart_toEndOf="@id/create_service_text_view"
        app:layout_constraintTop_toTopOf="@id/create_service_text_view" />

    <TextView
        android:id="@+id/destroy_service_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Destroy service"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_service_text_view" />

    <Button
        android:id="@+id/destroy_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destroy"
        app:layout_constraintBottom_toBottomOf="@id/destroy_service_text_view"
        app:layout_constraintStart_toEndOf="@id/destroy_service_text_view"
        app:layout_constraintTop_toTopOf="@id/destroy_service_text_view" />

    <TextView
        android:id="@+id/update_service_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Update service"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/destroy_service_text_view" />

    <Button
        android:id="@+id/update_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="@id/update_service_text_view"
        app:layout_constraintStart_toEndOf="@id/update_service_text_view"
        app:layout_constraintTop_toTopOf="@id/update_service_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>